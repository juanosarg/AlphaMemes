<?xml version="1.0" encoding="utf-8" ?>
<Defs>



  <ThingDef ParentName="BuildingFloorCoveringMediumBase">
    <defName>AM_CubicSlab_Medium</defName>
    <label>cubic slab (medium)</label>
    <description>A stone bas relief of cubic imagery for decorating a floor. Contrary to other slabs, you can (and should) build these out of GOLD.</description>
    <dominantStyleCategory>AM_Cubic</dominantStyleCategory>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/BuildingStyles/Cubic/Slab/Medium</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <stuffCategories>
      <li>Stony</li>
	  <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>
  </ThingDef>

