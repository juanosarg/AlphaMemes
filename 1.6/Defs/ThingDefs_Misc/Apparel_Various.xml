<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 

  <ThingDef ParentName="HatMakeableBase">
    <defName>AM_Apparel_Eyepatch</defName>
    <label>eyepatch</label>
    <description>A protective covering, usually made of cloth, for an injured eye. Or just for style.</description>
    <graphicData>
      <texPath>Things/Apparel/Corsair/AM_CorsairPatch/AM_CorsairPatch</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.8, 0.8)</drawSize>
    </graphicData>
    <costList><Cloth>15</Cloth></costList>
    
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>500</WorkToMake>
      <Mass>0.07</Mass>
      <ArmorRating_Sharp>0.07</ArmorRating_Sharp>
      <ArmorRating_Blunt>0</ArmorRating_Blunt>
      <ArmorRating_Heat>0.04</ArmorRating_Heat>
      <Insulation_Cold>1.8</Insulation_Cold>
      <Insulation_Heat>7</Insulation_Heat>
      <EquipDelay>0.4</EquipDelay>
    </statBases>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <memePrerequisitesAny><li>AM_Structure_Corsair</li></memePrerequisitesAny>
    </recipeMaker>
    <apparel>
     
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Corsair/AM_CorsairPatch/AM_CorsairPatch</wornGraphicPath>
      <layers>
        <li>EyeCover</li>
      </layers>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
      <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
    </apparel>
    <comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>AM_Eyepatch</hediff>
        <part>Head</part>
      </li>
    </comps>

  </ThingDef>

</Defs>